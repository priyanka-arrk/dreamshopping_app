<%= form_for @category, :html => { :class => "form-horizontal post" } do |f| %>

<% if @category.errors.any? %>
    <div id="error_explanation", class="panel panel-danger">
     <div class="panel-heading">
        <h3 class="panel-title"> <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved: </h3>
      </div>
      <div class="panel-body">
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= read_form.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= read_form.text_field :name, :class => 'form-control' %>
    </div>
    <%=read_form.error_span(:name) %>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= read_form.submit 'Save', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                categories_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>